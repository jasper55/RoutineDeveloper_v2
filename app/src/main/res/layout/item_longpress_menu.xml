<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="100dp">

    <View
        android:id="@+id/itemMenuOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransBg"
        android:visibility="gone" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/textLight"
        app:strokeWidth="0dp"
        android:id="@+id/item_longpress_menu_overlay"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/edit_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingHorizontal="20dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left|bottom"
                android:layout_marginEnd="12dp"
                app:srcCompat="@drawable/ic_edit_black"
                app:tint="@color/textDark" />
            <TextView
                android:text="edit item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textDark"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left|bottom"
                android:layout_marginEnd="12dp"
                app:srcCompat="@drawable/ic_delete_black"
                app:tint="@color/textDark" />
            <TextView
                android:id="@+id/tv_add_item"
                android:text="delete item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textDark"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/clear_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left|bottom"
                android:layout_marginEnd="12dp"
                app:srcCompat="@drawable/ic_clear_black"
                app:tint="@color/textDark" />
            <TextView
                android:id="@+id/tv_clear_score"
                android:text="clear item score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textDark"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_close_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_close_black"
            app:tint="@color/textDark"/>

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>